{
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es2017",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "lib": [
            "es2017",
            "webworker",
            "dom"
        ],
        "types": [
            "jest"
        ]
    },
    "paths": {
        "public/*": [ "../public/*" ],
        "api/*": [ "api/*" ],
        "components/*": [ "components/*" ],
        "common/*": [ "common/*" ],
        "pages/*": [ "pages/*" ],
        "types/*": [ "types/*" ],
    }
}
